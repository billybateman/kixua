{
    "zencoder.enableCodingAgent (beta)": true,
    "zencoder.excludeFilesFromIndexing": [
        "build/**",
        "dist/**",
        "out/**",
        ".hg/**",
        "tmp/**",
        "temp/**",
        "cache/**",
        "venv/**",
        ".venv/**",
        "env/**",
        "vendor/**",
        "test_output/**",
        "coverage/**",
        "logs/**",
        "assets/**"
    ],
    "zencoder.enableRepoIndexing": true,
    "github.copilot.chat.codeGeneration.instructions": [
        {
            "file": ".github/.copilot-instructions.md"
        }
    ]
}